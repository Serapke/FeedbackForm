<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @comment.author %>
</p>
<% if current_admin %>
  <p>
    <strong>Phone:</strong>
    <%= @comment.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @comment.email %>
  </p>
<% end %>

<p>
  <strong>Content:</strong>
  <%= @comment.content %>
</p>

<% if current_admin %>
  <%= link_to 'Edit', edit_comment_path(@comment) %>
<% end %>
<%= link_to 'Back', comments_path %>
